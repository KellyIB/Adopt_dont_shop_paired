<center>
<h1>Shelter Index Page</h1>
<% @shelters.each do |shelter| %>
  <section id="shelter-<%=shelter.id%>">
  <%= link_to shelter.name, "/shelters/#{shelter.id}" %><br/>
  <%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit" %><br>
  <% if !shelter.adoption_pending_check %>
    <%= link_to "Delete Shelter", "/shelters/#{shelter.id}", method: :delete %><br><br>
  <% else %>
    <a>This Shelter Has Pets With Pending Applications</a><br><br>
  <% end %>
  </section>
<% end %>
<%= link_to "Add New Shelter", "/shelters/new" %>
</center>
