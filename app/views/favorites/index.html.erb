<center>
  <% if !favorites.contents.empty? %>
    <h1>All Favorited Pets</h1>
    <section id='favorited-pets'>
    <p><%= link_to "Apply to Adopt", "/favorites/applications/new" %></p>

    <% favorites.pet_objects.each do |pet| %>
      <section id= 'favorite-<%=pet["id"]%>'>
        <img src= <%= pet["image"] %>>
        <p>Name: <%= link_to pet["name"], "/pets/#{pet["id"]}" %></p>
        <p><%= link_to "Remove #{pet.name} From Favorites", "/favorites/#{pet["id"]}", method: :delete %></p><br>
      </section>
    <% end %>
    <p><%= link_to "Remove All From Favorites", "/favorites", method: :delete %></p><br>
  <% else %>
    <h1>No Pets in Favorites</h1><br>
  <% end %>
  </section>

  <h1>Pets Applied For</h1>
  <section id= "pets-applied-for">
    <% pets_applied_for.each do |pet| %>
    <p>Name: <%= link_to pet.name, "/pets/#{pet["id"]}" %></p>
    <% end %>
  </section>

  <h1>Approved Applications</h1>
  <section id="approved-applications">
    <% favorites.pets_approved.each do |pet| %>
      <p>Name: <%= link_to pet.name, "/pets/#{pet["id"]}" %></p>
    <% end %>
  </section>
</center>
