<center>
  <h1>Editing Review</h1>
  <%= form_tag path, method: method do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, (@review.title if @review) %>

    <%= label_tag :rating %>
    <%= number_field_tag :rating, (@review.rating if @review), min: 1, max: 5 %>

    <%= label_tag :content %>
    <%= text_field_tag :content, (@review.content if @review) %>

    <%= label_tag :image %>
    <%= text_field_tag :image, (@review.image if @review) %>

    <%= submit_tag button_text %>
  <% end %>
</center>
