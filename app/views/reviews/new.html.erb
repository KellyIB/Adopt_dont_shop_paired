<center>
  <h1>New Review</h1>

  <%= form_tag "/shelters/#{@shelter.id}" do %>
    <%= label_tag :title %>
    <%= text_field_tag :title %>

    <%= label_tag :rating %>
    <%= number_field_tag(:rating, nil, min: 1, max: 5)%>

    <%= label_tag :content %>
    <%= text_field_tag :content %>

    <%= label_tag :image %>
    <%= text_field_tag :image %>

    <%= submit_tag "Submit Review" %>
  <% end %>
</center>
