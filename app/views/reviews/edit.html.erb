<center>
  <h1>Editing Review</h1>
  <%= form_tag "/shelters/#{@shelter.id}/reviews/#{@review.id}", method: :patch do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, "#{@review.title}" %>

    <%= label_tag :rating %>
    <%= number_field_tag(:rating, "#{@review.rating}", min: 1, max: 5) %>

    <%= label_tag :content %>
    <%= text_field_tag :content, "#{@review.content}" %>

    <%= label_tag :image %>
    <%= text_field_tag :image, "#{@review.image}" %>

    <%= submit_tag "Save Review" %>
  <% end %>
</center>
