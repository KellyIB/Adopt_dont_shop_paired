<center>
  <h1> <%= @pet.name %> </h1>
  <img src= <%= @pet.image %>>
  <p> Description: <%= @pet.description %> </p>
  <p> Aproximate Age: <%= @pet.approximate_age %> </p>
  <p> Sex: <%= @pet.sex %> </p>

  <% if pet_in_favorites?(@pet.id)%>
  <p>Adoption Status: Adoptable</p>
    <p><%= link_to "Remove #{@pet.name} From Favorites", "/favorites/#{@pet.id}", method: :delete %></p>
    <% elsif @pet.adoptable? %>
    <p>Adoption Status: Adoptable</p>
    <p><%= link_to "Add #{@pet.name} to Favorites", "/favorites/#{@pet.id}", method: :patch %></p>
  <% else %>
    <p>Adoption Status: Pending</p>
    <p>On Hold For: <%= link_to @pet.applicant(@pet.id).name, "/applications/#{@pet.applicant(@pet.id).id}" %> </p>

  <% end %>

  <p> <%= link_to "Edit #{@pet.name}", "/pets/#{@pet.id}/edit" %> </p>
  <p> <%= link_to "Delete Pet Profile", "/pets/#{@pet.id}", method: :delete %> </p><br>
  <p> <%= link_to "Applications for #{@pet.name}", "/pets/#{@pet.id}/applications" %> </p>

</center>
