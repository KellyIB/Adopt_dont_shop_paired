<center>
  <h1> <%= @pet.name %> </h1>
  <img src= <%= @pet.image %>>
  <p> Description: <%= @pet.description %> </p>
  <p> Aproximate Age: <%= @pet.approximate_age %> </p>
  <p> Sex: <%= @pet.sex %> </p>
  <% if @pet.adoptable? %>
    <p>Adoption Status: Adoptable</p>
  <% else %>
    <p>Adoption Status: Pending</p>
  <% end %>
  <p> <%= link_to "Edit #{@pet.name}", "/pets/#{@pet.id}/edit" %> </p>
  <p> <%= link_to "Delete Pet Profile", "/pets/#{@pet.id}", method: :delete %> </p>
</center>
